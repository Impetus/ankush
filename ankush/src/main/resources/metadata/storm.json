{
  "Storm": {
    "Defaults": {
      "slotsPorts": [
        6700,
        6701,
        6702,
        6703
      ],
      "javaLibraryPath": "/usr/local/lib",
      "localDir": "/home/${user}/storm/storm_dir",
      "uiPort": 9090,
      "jmxPort_Nimbus": 12347,
      "jmxPort_Supervisor": 12346,
      "installationPath": "/home/${user}/storm/"
    },
    "Vendors": {
      "Twitter": {
        "0.9.0.1": {
          "url": "https://dl.dropboxusercontent.com/s/dj86w8ojecgsam7/storm-0.9.0.1.zip"
        },
        "0.8.2": {
          "url": "https://dl.dropbox.com/u/133901206/storm-0.8.2.zip"
        }
      }
    }
  },
  "Zookeeper": {
    "Defaults": {
      "installationHomePath": "/home/${user}/zookeeper/",
      "clientPort": 2181,
      "jmxPort": 12345,
      "dataDir": "/home/${user}/zookeeper/zk_data_dir/",
      "syncLimit": 2,
      "initLimit": 5,
      "tickTime": 2000
    },
    "Vendors": {
      "Apache": {
        "3.4.5": {
          "url": "http://archive.apache.org/dist/zookeeper/zookeeper-3.4.5/zookeeper-3.4.5.tar.gz"
        },
        "3.3.5": {
          "url": "http://archive.apache.org/dist/zookeeper/zookeeper-3.3.5/zookeeper-3.3.5.tar.gz"
        }
      }
    }
  }
}